@model BlueGeeks.Models.Stadium

@{
	ViewData["Title"] = "Create";
}
<div class="bg">
	<h1>Create</h1>

	<h4>Stadium</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="StadiumName" class="control-label">Stadium Name</label>
					<input asp-for="StadiumName" class="form-control" />
					<span asp-validation-for="StadiumName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<!--Added the auto complete from javascript, through google API that fills in the address automatically -->
					<label asp-for="City" class="control-label"> Location </label>
					<input id="autocomplete" onFocus="geolocate()" asp-for="City" class="form-control" />
					<span asp-validation-for="City" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Team_Id" class="control-label"></label>
					<select asp-for="Team_Id" class="form-control" asp-items="ViewBag.Team_Id"></select>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>

	<!--Calls the autocomplete function from the javascript file-->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB5o8GzOXNM-weRI4IJ74BTph5MbHbVijM&libraries=places&callback=initAutocomplete" async defer></script>

	<div>
		<a asp-action="Index">Back to List</a>
	</div>
</div>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
